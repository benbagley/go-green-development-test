<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="mt-5">Albums</h1>
    <p class="lead">Here we show all photos within a photo album</p>

    <div class="row">
      <% @album.each do |album| %>
        <div class="col-md-4">
          <%= image_tag(album['thumbnailUrl']) %>

          <h5 class="card-title">
            <%= album['title'] %>
          </h5>
        </div>
      <% end %>
    </div>
  </div>

  <%= will_paginate @album, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, class: 'margin-auto' %>
</main>
